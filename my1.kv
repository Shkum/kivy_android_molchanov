
<ItemLabel@MDLabel>:
    font_size: '25sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size


<Container>:
    rows:3

    text_input: text_input
    nitro: nitro
    salt: salt
    starts: starts
    sugars: sugars
    time: time



    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.2
        padding: 30

        MDTextField:
            input_type: 'number'
            input_filter: 'int'
            id: text_input
            font_size: '45sp'
            multiline: False
            hint_text: 'Mass in grams'

    GridLayout:
        cols: 2

        BoxLayout:
            orientation: 'vertical'
            padding: [30, 0, 0, 0]
            ItemLabel:
                text: 'Salt'
            ItemLabel:
                text: 'Nitrate salt'
            ItemLabel:
                text: 'Mono-sugar'
            ItemLabel:
                text: 'Starts'
            ItemLabel:
                text: 'Salting time'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1

            ItemLabel:
                id: salt

            ItemLabel:
                id: nitro

            ItemLabel:
                id: sugars

            ItemLabel:
                id: starts

            ItemLabel:
                id: time


    BoxLayout:
        size_hint: 1, 0.15
        padding: [30, 0, 30, 20]
        MDRaisedButton:
            size_hint: 1, 0.9
            text: 'Go!'
            font_size: 40

            on_release:
                root.calculate()


